<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<VBox fx:id="sidebar"
      alignment="TOP_CENTER" styleClass="sidebar"
      xmlns="http://javafx.com/javafx/23.0.1" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.betabase.controllers.SidebarController"
      stylesheets="@../styles/colors.css, @../styles/sidebarStyles.css">

   <padding>
         <Insets bottom="20" top="20" />
   </padding>
   <children>
         <ImageView fx:id="logo" fitWidth="180.0"
                    preserveRatio="true" style="-fx-cursor: hand;"
                    onMouseClicked="#handleLogoClick">
            <image>
               <Image url="@/com/betabase/images/logo.png" />
            </image>
         </ImageView>
         <Region prefHeight="10.0" />
         <HBox styleClass="nav-hbox" onMouseClicked="#handlePosClick">
            <children>
               <ImageView fx:id="pos_logo" fitWidth="45.0" preserveRatio="true">
                     <image>
                        <Image url="@/com/betabase/images/pos.png" />
                     </image>
               </ImageView>
               <Label fx:id="pos_label" styleClass="nav-label" text="Point of Sale" />
            </children>
         </HBox>
         <HBox styleClass="nav-hbox"  onMouseClicked="#handleCalendarClick">
            <children>
               <ImageView fx:id="cal_logo" fitWidth="45.0" preserveRatio="true">
                     <image>
                        <Image url="@/com/betabase/images/cal.png" />
                     </image>
               </ImageView>
               <Label fx:id="cal_label" styleClass="nav-label" text="Calendar" />
            </children>
         </HBox>
         <HBox styleClass="nav-hbox" onMouseClicked="#handleAnalyticsClick">
            <children>
               <ImageView fx:id="chart_logo" fitWidth="45.0" preserveRatio="true">
                     <image>
                        <Image url="@/com/betabase/images/chart.png" />
                     </image>
               </ImageView>
               <Label fx:id="analytics_label" styleClass="nav-label" text="Analytics" />
            </children>
         </HBox>
         <HBox styleClass="nav-hbox" onMouseClicked="#handleSettingsClick">
            <children>
               <ImageView fx:id="gear_logo" fitWidth="45.0" preserveRatio="true">
                     <image>
                        <Image url="@/com/betabase/images/gear.png" />
                     </image>
               </ImageView>
               <Label fx:id="settings_label" styleClass="nav-label" text="Settings" />
            </children>
         </HBox>
   </children>
</VBox>