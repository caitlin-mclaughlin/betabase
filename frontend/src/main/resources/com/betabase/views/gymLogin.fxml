<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainPane" spacing="15"
      styleClass="default-background"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.betabase.controllers.GymLoginController"
      stylesheets="@../styles/colors.css, @../styles/loginStyles.css, @../styles/shared.css">
    <padding>
      <Insets bottom="15" right="15" top="15" left="15" />
    </padding>

    <Label text="Welcome to BetaBase!" styleClass="welcome-label" />
    <TextField fx:id="usernameField" promptText="Gym Username" styleClass="field" />
    <PasswordField fx:id="passwordField" promptText="Password" styleClass="field" />
    <Button text="Login" onAction="#handleLogin" styleClass="check-in-button"/>
    <Region VBox.vgrow="ALWAYS" />
    <HBox spacing="20">
      <Label text="New to Betabase?" />
      <Button text="Create Account" onAction="#handleAccountCreation" styleClass="check-in-button"/>
    </HBox>
</VBox>
