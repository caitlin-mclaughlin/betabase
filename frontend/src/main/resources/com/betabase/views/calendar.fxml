<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainPane" styleClass="colors"
            prefHeight="900.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.betabase.controllers.CalendarController"
            stylesheets="@../styles/colors.css, @../styles/calStyles.css, @../styles/shared.css">

    <center>
        <VBox style="-fx-background-color: -fx-light-color;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            
            <HBox spacing="10" styleClass="date-header">
                <Button fx:id="prevButton" text="&lt;" onAction="#handlePrevMonth"
                        styleClass="month-button" />
                <Label fx:id="monthYearLabel" />
                <Button fx:id="nextButton" text="&gt;" onAction="#handleNextMonth"
                        styleClass="month-button" />
            </HBox>
            <GridPane fx:id="calendarGrid" hgap="2" vgap="2" styleClass="cal-grid">
                <padding>
                    <Insets bottom="2" left="2" right="2" top="2" />
                </padding>

                <columnConstraints>
                    <ColumnConstraints percentWidth="14.2857" />
                    <ColumnConstraints percentWidth="14.2857" />
                    <ColumnConstraints percentWidth="14.2857" />
                    <ColumnConstraints percentWidth="14.2857" />
                    <ColumnConstraints percentWidth="14.2857" />
                    <ColumnConstraints percentWidth="14.2857" />
                    <ColumnConstraints percentWidth="14.2857" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints percentHeight="7"/>
                    <RowConstraints percentHeight="18.6"/>
                    <RowConstraints percentHeight="18.6"/>
                    <RowConstraints percentHeight="18.6"/>
                    <RowConstraints percentHeight="18.6"/>
                    <RowConstraints percentHeight="18.6"/>
                </rowConstraints>
            </GridPane>
        </VBox>
    </center>

</BorderPane>