<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="999.0" 
            xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.betabase.controllers.MemberController">
   <left>
      <VBox prefHeight="800.0" prefWidth="333.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="361.0" fitWidth="325.0" pickOnBounds="true" preserveRatio="true" />
            <HBox prefHeight="100.0" prefWidth="333.0">
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" text="Change Photo" wrapText="true">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </VBox>
   </left>

   <center>
      <VBox prefHeight="800.0" prefWidth="333.0" BorderPane.alignment="CENTER">
         <HBox prefHeight="50.0" prefWidth="333.0">
            <Label text="Name (Last, First): ">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="name" />
         </HBox>
         <HBox prefHeight="50.0" prefWidth="333.0">
            <Label text="Phone Number: ">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label text="Label">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </HBox>
         <HBox prefHeight="50.0" prefWidth="333.0">
            <Label text="Date of Birth: ">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label text="Label">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </HBox>
         <HBox prefHeight="50.0" prefWidth="333.0">
            <Label text="Member ID: ">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="memberId" text="Label">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </HBox>
         <HBox prefHeight="50.0" prefWidth="333.0">
            <Label text="Member Since: ">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label text="Label">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </HBox>
      </VBox>
   </center>

   <right>
      <VBox prefHeight="800.0" prefWidth="333.0" BorderPane.alignment="CENTER">
         <Label text="Address: ">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
      </VBox>
   </right>
</BorderPane>
