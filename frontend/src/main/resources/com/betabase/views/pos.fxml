<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainPane" styleClass="colors"
            prefHeight="900.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.betabase.controllers.PosController"
            stylesheets="@../styles/colors.css, @../styles/posStyles.css">

   <center>
      <SplitPane styleClass="pos" dividerPositions="0.3" BorderPane.alignment="CENTER">
         <items>
            <VBox />
            <TabPane tabClosingPolicy="UNAVAILABLE">
               <tabs>
                  <Tab text="Frequently Used" />
                  <Tab text="Memberships" />
                  <Tab text="Gear" />
                  <Tab text="Merch" />
               </tabs>
            </TabPane>
         </items>
      </SplitPane>
   </center>

</BorderPane>
